<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="sales_email" translate="label" type="text" sortOrder="301" showInDefault="1" showInWebsite="1" showInStore="1">            
            <group id="dckap_accounting" translate="label" type="text" sortOrder="9" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>dckap Accounting</label>                                
                <field id="copy_to_accounting" translate="label comment" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Send Email Copy To Accounting</label>
                    <validate>required-entry validate-email</validate>
                </field>
                <field id="copy_to_csr" translate="label comment" type="text" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Send Email Copy To CSR</label>
                    <validate>required-entry validate-email</validate>
                </field>                
            </group>            
        </section> 
        <section id="customer" translate="label" sortOrder="130" showInDefault="1" showInWebsite="1" showInStore="1">
            <group id="create_account" translate="label" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                <field id="email_confirmed_template_csr" translate="label comment" type="select" sortOrder="110" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Registration Email to CSR</label>                    
                    <source_model>Magento\Config\Model\Config\Source\Email\Template</source_model>
                </field> 
            </group>  
        </section>    
    </system>
</config>
